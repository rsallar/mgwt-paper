.popup {

  background-color: #E5E9E8;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.text-area {

  color: #777;
  border: 0;
  font: normal 17px Helvetica;
  padding: 20px;
  margin-left: 0;
  background-color: #E5E9E8;
  flex: 1;
}
